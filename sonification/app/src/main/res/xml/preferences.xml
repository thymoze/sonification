<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:key="service_preference"
        android:entries="@array/services"
        android:entryValues="@array/services"
        android:defaultValue="UDP"
        android:summary="%s"
        app:title="Background service type"
        android:icon="@drawable/access_point"/>

    <MultiSelectListPreference
        android:key="sensors_preference"
        app:title="@string/title_charts"
        android:icon="@drawable/ic_charts_black_24dp"
        app:summary="Select which different charts to display" />

    <Preference
        app:title="@string/title_sounds"
        android:icon="@drawable/music_note"
        app:summary="Map the gases to your preferred sounds."
        app:fragment="mupro.hcm.sonification.preferences.SoundsPreferencesFragment" />
</PreferenceScreen>