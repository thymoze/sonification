<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <MultiSelectListPreference
        android:key="sensors_preference"
        app:title="@string/active_sensors"
        android:summary="@string/sensors_summary"
        android:icon="@drawable/ic_charts_black_24dp" />

    <Preference
        app:title="@string/title_sounds"
        android:icon="@drawable/ic_music_note_black_24dp"
        app:summary="@string/map_sensor_sound"
        app:fragment="mupro.hcm.sonification.preferences.SoundsPreferencesFragment" />

    <Preference
        app:title="@string/app_name"
        android:icon="@drawable/ic_cellphone_sound_black_24dp"
        app:summary="@string/sonifcation_summary"
        app:fragment="mupro.hcm.sonification.preferences.SonificationPreferencesFragment" />

    <Preference
        app:title="@string/title_about"
        android:icon="@drawable/ic_information_black_24dp"
        app:summary="@string/about_summary"
        app:fragment="mupro.hcm.sonification.preferences.AboutPreferenceFragment" />
</PreferenceScreen>