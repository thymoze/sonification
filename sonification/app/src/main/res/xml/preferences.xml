<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:key="service_preference"
        android:entries="@array/services"
        android:entryValues="@array/services"
        android:summary="%s"
        app:title="Background service type" />

    <PreferenceCategory
        app:key="charts_category"
        app:title="@string/title_charts">

        <Preference
            app:title="@string/title_charts"
            app:summary="Select which different charts to display"
            app:fragment="mupro.hcm.sonification.preferences.ChartsPreferencesFragment" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="sounds_category"
        app:title="@string/title_sounds">

        <Preference
            app:title="@string/title_sounds"
            app:summary="Map the gases to your preferred sounds."
            app:fragment="mupro.hcm.sonification.preferences.SoundsPreferencesFragment" />

    </PreferenceCategory>
</PreferenceScreen>